{{define "Title"}} register {{end}}
{{define "content"}}
<div class="container">

<form method="post">
		<div class="form-group">
			<label for="first_name">User Name</label>
			<div><input type="text" class="form-control" id="first_name" name="user_name" maxlength="48" placeholder="First Name" value="{{.first_name}}" /></div>
		</div>


		<div class="form-group">
			<label for="password">Password</label><div>
			<input type="password" class="form-control" id="password" name="user_password" maxlength="48" placeholder="Password" value="{{.password}}" />	</div>
		</div>
		<div class="form-group">
			<label for="password_verify">Verify Password</label>
			<div><input type="password" class="form-control" id="password_verify" name="password_verify" maxlength="48" placeholder="Verify Password" value="{{.password}}" /></div>
		</div>


		<input type="submit" value="Create Account" class="btn btn-primary" />

	</form>
</div>


{{end}}
